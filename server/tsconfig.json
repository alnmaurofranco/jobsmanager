{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["ES6"],
    "allowJs": false,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "src",
    "paths": {
      "@database/*": ["database/*"],
      "@views/*": ["views/*"],
      "@services/*": ["services/*"],
      "@controllers/*": ["controllers/*"],
      "@config/*": ["config/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"],
      "@middlewares/*": ["middlewares/*"]
    },
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false
  },
  "exclude": [
    "./coverage/**/*",
    "./dist/**/*",
    "./node_modules/**/*",
    "./*.config.js"
  ]
}
