{
  "name": "jobsmanager-ts",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev --inspect -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
    "build": "rimraf dist && babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "prod": "yarn build && yarn start",
    "start": "NODE_ENV=production node dist/index.js",
    "typeorm": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "db:migration": "yarn typeorm migration:generate -n",
    "db:migrations": "yarn typeorm migration:create -n",
    "db:migrate": "yarn typeorm migration:run",
    "db:refresh": "yarn typeorm migration:revert",
    "db:drop": "yarn typeorm schema:drop",
    "test": "jest"
  },
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.4.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "date-fns": "^2.21.1",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^4.4.1",
    "ioredis": "^4.27.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.6.0",
    "pg": "^8.5.1",
    "rate-limiter-flexible": "^2.2.1",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "typeorm": "^0.2.32",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.15",
    "@babel/node": "^7.13.13",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/ejs": "^3.0.6",
    "@types/express": "^4.17.11",
    "@types/helmet": "^4.0.0",
    "@types/ioredis": "^4.26.1",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.37",
    "@types/nodemailer": "^6.4.1",
    "@types/redis": "^2.8.31",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "prettier": "^2.3.2",
    "supertest": "^6.1.4",
    "ts-jest": "^26.5.4",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  }
}
